<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s_idrive.purch.Activity.EditPo">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/txtbartotalpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAllCaps="false"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Menu"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtbaridpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="TextView"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Menu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnverifikasi"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@android:drawable/btn_default"
            android:text="Verifikasi"
            android:textColor="@color/colorAccent"
            app:layout_scrollFlags="scroll" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_edit_po"
        android:layout_width="wrap_content"
        android:id="@+id/include2"
        tools:ignore="IncludeLayoutParam"/>

</android.support.design.widget.CoordinatorLayout>
